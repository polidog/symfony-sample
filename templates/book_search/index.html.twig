{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto 5em; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    .example-wrapper form {
        display: flex;
        flex-direction: row;
        align-items: flex-start;
    }
    .left-margin { margin-left: 10px;}
    .form_search {
        margin: 5px;
        color: white;
        background-color: #6660f0;
        border-color: #6660f0;
        display: inline-block;
        font-weight: 400;
        line-height: 1.5;
        text-align: center;
        text-decoration: none;
        vertical-align: middle;
        cursor: pointer;
        -webkit-user-select: none;
        -moz-user-select: none;
        user-select: none;
        font-size: 1rem;
        border-radius: 0.25rem;
    }
    .input {
        padding: 6px;
        margin: 5px;
    }
    .wrapper {
        display: grid;
        grid-template-columns: 20% 40%;
        grid-template-rows: 100%;
        grid-gap: 10px;
    }
    .book-image-box {
        grid-column: 1;
        grid-row: 1 / 2;
        text-align: right;
        padding-right: 17%;
    }
    .book-title-content-box {
        grid-column: 2 / 3;
        grid-row: 1;
    }
    .book-title {
        font-size: 1.5em;
        font-weight: bold;
    }
    .book-content {
        width: 85%;
    }
    .register-button {
        margin: 5px;
        color: white;
        background-color: #6660f0;
        border-color: #6660f0;
        display: inline-block;
        font-weight: 400;
        line-height: 1.5;
        text-align: center;
        text-decoration: none;
        vertical-align: middle;
        cursor: pointer;
        -webkit-user-select: none;
        -moz-user-select: none;
        user-select: none;
        font-size: 1rem;
        border-radius: 0.25rem;
    }
    .book-register-form {
        text-align: right;
        padding-right: 15%;
    }
    .error {
      font-size: 12px;
      color: #ff0000;
    }
    .error ul {
      padding-left:0;
      margin: 0;
    }
    .error ul > li {
        list-style: none;
    }

</style>

<div class="example-wrapper">
    <form method="get" action="" class="">
        <div>
            <div>{{ form_widget(form.isbn) }}</div>
            <div class="error">{{ form_errors(form.isbn) }}</div>
        </div>
        <button type="submit" class="form_search">検索する</button>
    </form>
</div>
{% if searchResult is not null %}
    <div class="wrapper">
        <div class="book-image-box">
            <img src="{{ searchResult.imageUrl }}" alt="{{ searchResult.title }}" title="{{ searchResult.title }}">
        </div>
        <div class="book-title-content-box">
            <div class="book-title">{{ searchResult.title }}</div>
            <div class="book-content">{{ searchResult.summary }}</div>
            <div class="book-register-form">
                {{ form_start(registerForm, {'method' : 'post', 'action': path('book_list_save')}) }}
                {{ form_widget(registerForm) }}
                <button type="submit" class="register-button">持ってる本に登録する</button>
                {{ form_end(registerForm) }}
            </div>
        </div>
    </div>
{% endif %}
{% endblock %}
